<!-- Interfaccia gestione modelli -->
<odoo>
    <record id="view_tech_repair_model_form" model="ir.ui.view">
        <field name="name">tech.repair.device.model.form</field>
        <field name="model">tech.repair.device.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category_id"/>
                        <field name="brand_id"/>
                    </group>

                    <group>
                        <field name="variant_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                            </tree>
                        </field>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tech_repair_model_list" model="ir.ui.view">
        <field name="name">tech.repair.device.model.list</field>
        <field name="model">tech.repair.device.model</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="category_id"/>
                <field name="brand_id"/>
                <!-- One2many fields are typically edited in the form view; avoid showing them raw in list view.
                     If you need a quick indicator, consider adding a computed variant_count field in Python and showing it here:
                     <field name="variant_count"/>
                -->
            </list>
        </field>
    </record>
  
    <record id="action_tech_repair_model" model="ir.actions.act_window">
        <field name="name">Device Model</field>
        <field name="res_model">tech.repair.device.model</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
