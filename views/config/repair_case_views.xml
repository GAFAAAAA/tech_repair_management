<odoo>
    <!-- Case Form View -->
    <record id="view_tech_repair_case_form" model="ir.ui.view">
        <field name="name">tech.repair.case.form</field>
        <field name="model">tech.repair.case</field>
        <field name="arch" type="xml">
            <form string="Flight Case">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="colour" required="1"/>
                            <field name="colour_custom" invisible="colour != 'custom'" required="colour == 'custom'"/>
                            <field name="corner_colour"/>
                            <field name="corner_colour_custom" invisible="corner_colour != 'custom'" required="corner_colour == 'custom'"/>
                        </group>
                        <group>
                            <field name="company_id" placeholder="Company"/>
                            <field name="check_in_date" readonly="1"/>
                            <field name="checked_in_by" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes about this case..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Case List View -->
    <record id="view_tech_repair_case_list" model="ir.ui.view">
        <field name="name">tech.repair.case.list</field>
        <field name="model">tech.repair.case</field>
        <field name="arch" type="xml">
            <list string="Flight Cases">
                <field name="name"/>
                <field name="colour"/>
                <field name="colour_custom"/>
                <field name="corner_colour"/>
                <field name="corner_colour_custom"/>
                <field name="company_id"/>
                <field name="check_in_date"/>
            </list>
        </field>
    </record>

    <!-- Case Search View -->
    <record id="view_tech_repair_case_search" model="ir.ui.view">
        <field name="name">tech.repair.case.search</field>
        <field name="model">tech.repair.case</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="company_id"/>
                <filter name="group_colour" string="Colour" context="{'group_by': 'colour'}"/>
                <filter name="group_company" string="Company" context="{'group_by': 'company_id'}"/>
            </search>
        </field>
    </record>

    <!-- Case Action -->
    <record id="action_tech_repair_case" model="ir.actions.act_window">
        <field name="name">Flight Cases</field>
        <field name="res_model">tech.repair.case</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_tech_repair_case_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a flight case
            </p>
            <p>
                Check in flight cases containing multiple devices.
            </p>
        </field>
    </record>
</odoo>
