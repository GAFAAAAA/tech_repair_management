<odoo>
    <!-- Adding the app for repair management with icon -->
    <menuitem id="tech_repair_management_main_menu"
              name="Repair Management"
              sequence="-1"
              web_icon="tech_repair_management,static/description/icon.png"/>


    <!-- Menu for repairs -->
    <menuitem id="tech_repair_order_menu" name="Repairs" parent="tech_repair_management_main_menu" sequence="1" action="action_tech_repair_order"/>

    <!-- Menu for inventory -->
    <menuitem id="tech_repair_inventory_menu" name="Inventory" parent="tech_repair_management_main_menu" sequence="2" action="action_tech_repair_inventory"/>

    <!-- Menu for managing loaner devices -->
    <menuitem id="tech_repair_loaner_device_menu" name="Loaner Devices" parent="tech_repair_management_main_menu" sequence="3"/>
        <menuitem id="tech_repair_loaner_device_submenu" name="Loaner Management" parent="tech_repair_loaner_device_menu" action="action_tech_repair_loaner"/>
    
    <!-- Menu for configuration -->
    <menuitem id="tech_repair_config_menu" name="Configuration" parent="tech_repair_management_main_menu" sequence="4"/>
        <!-- Sub Menu Devices-->
        <menuitem id="tech_repair_device_menu" name="Devices" parent="tech_repair_config_menu"/>
            <!-- Submenu items Devices-->
            <menuitem id="tech_repair_category_menu" name="Device Categories" parent="tech_repair_device_menu" action="action_tech_repair_category"/>
            <menuitem id="tech_repair_brand_menu" name="Device Brands" parent="tech_repair_device_menu" action="action_tech_repair_brand"/>
            <menuitem id="tech_repair_model_menu" name="Device Models" parent="tech_repair_device_menu" action="action_tech_repair_model"/>
            <menuitem id="tech_repair_device_color" name="Device Colors" parent="tech_repair_device_menu" action="action_tech_repair_device_color"/>

        <!-- Sub Menu States-->
        <menuitem id="tech_repair_status_menu" name="States" parent="tech_repair_config_menu"/>
            <!-- Submenu items States-->
            <menuitem id="tech_repair_state_submenu" name="Internal State Management" parent="tech_repair_status_menu" action="action_tech_repair_state"/>
            <menuitem id="tech_repair_tech_repair_state_public" name="Online States for Customer" parent="tech_repair_status_menu" action="action_tech_repair_state_public"/>
        
        <!-- Sub Menu Prices-->
        <menuitem id="tech_repair_price_menu" name="Prices" parent="tech_repair_config_menu"/>
            <menuitem id="tech_repair_worktype" name="Defects and Price List Management" parent="tech_repair_price_menu" action="action_tech_repair_worktype"/>
            <menuitem id="tech_repair_software" name="Software Management" parent="tech_repair_price_menu" action="action_tech_repair_software"/>

        <!-- Sub Menu Other-->
        <menuitem id="tech_repair_other_menu" name="Other" parent="tech_repair_config_menu"/>
            <menuitem id="tech_repair_term" name="Terms Management" parent="tech_repair_other_menu" action="action_tech_repair_term" sequence="20"/>
    
    


    

</odoo>
