<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="tech_repair_status_page" name="Repair Status">
        <t t-call="website.layout">
            <div class="container">
                <h4 class="text-center mt-4">Repair Status</h4>

                <t t-if="repair">
                    <div class="card p-4 mt-3">
                        <table class="table table-borderless table-sm" style="border-collapse: collapse;">
                        <colgroup>
                            <col style="width: 33%;"/>
                            <col style="width: 33%;"/>
                            <col style="width: 33%;"/>
                        </colgroup>
                            <tr>
                                <td class="text-start">
                                    <h4><strong>Device:</strong> <br/> <t t-esc="repair.category_id.name"/> <t t-esc="repair.model_id.name"/></h4>
                                </td>
                                <td class="text-center">
                                    <h5><strong>Current Status: </strong><br/><t t-esc="customer_state"/></h5>
                                </td>
                            </tr>
                        </table>
                        
                        <table class="table table-borderless table-sm" style="border-collapse: collapse;">
                            <tbody>
                                <tr>
                                    <td style="font-size:13px; padding: 5px;"><strong>Repair Number: </strong><t t-esc="repair.name"/></td> 
                                    <td style="font-size:13px; padding: 5px;"><strong>Serial: </strong><t t-esc="repair.serial_number"/></td> 
                                    <td style="font-size:13px; padding: 5px;"><strong>Estimated Cost: </strong>â‚¬ <t t-esc="repair.expected_total"/></td>
                                </tr>
                                <tr>
                                    <td>
                                        <a t-att-href="'/repairstatus/pdf/%s' % repair.token_url" class="btn btn-info mt-3 btn-sm">
                                            Repair Check-In
                                        </a>
                                    </td>
                                    <td style="font-size:13px; padding: 5px;"><strong>Opened on: </strong><t t-esc="open_date"/></td>
                                    <td style="font-size:13px; padding: 5px;"><strong>Last Update: </strong><t t-esc="last_modified_date"/></td>
                                </tr>
                                
                            </tbody>
                        </table>
                    </div>

                    <!-- CHAT AREA -->
                    <div class="card p-4 mt-3">
                        <h4>Chat with Technician</h4>
                        <div class="chat-box" style="min-height: 200px; max-height: 300px; overflow-y: scroll; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
                            <t t-foreach="chat_messages" t-as="chat">
                                <t t-set="is_customer" t-value="chat.sender == 'customer'"/>
                                <t t-set="is_technician" t-value="chat.sender == 'technician'"/>

                                <div t-if="is_customer" class="alert alert-info" style="font-size:13px;">
                                    <strong>
                                        <t t-esc="repair.customer_id.name"/> 
                                        <t t-esc="chat.create_date.strftime('%d/%m/%Y %H:%M')"/>
                                    </strong>
                                    <br/>
                                    <t t-esc="chat.message"/>
                                </div>
                                <div t-if="is_technician" class="alert alert-secondary" style="font-size:13px;">
                                    <strong>
                                        Technician (<t t-esc="repair.assigned_to.name"/>) 
                                        <t t-esc="chat.create_date.strftime('%d/%m/%Y %H:%M')"/>
                                    </strong>
                                    <br/>
                                    <t t-esc="chat.message"/>
                                </div>      
                            </t>
                        </div>

                        <!-- Form to send messages -->
                        <form action="/repairstatus/send_message" method="post" style="padding: 10px;">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <input type="hidden" name="token" t-att-value="repair.token_url"/>
                            <textarea name="customer_message" class="form-control" rows="2" placeholder="Write a message..." t-att-required="1"></textarea>
                            <button type="submit" class="btn btn-secondary mt-2">Send</button>
                        </form>
                    </div>
                </t>
                <t t-else="">
                    <div class="alert alert-danger mt-3">Repair not found.</div>
                </t>
            </div>
        </t>
    </template>
</odoo>
