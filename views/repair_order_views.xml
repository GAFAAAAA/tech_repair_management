<odoo>
    <record id="view_tech_repair_order_form" model="ir.ui.view">
        <field name="name">tech.repair.order.form</field>
        <field name="model">tech.repair.order</field>
        <field name="arch" type="xml">
            <form string="Repair Management">
                <header>
                    <field name="state_id" widget="badge" options="{'clickable': True}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <div class="btn-group">
                            <button name="action_save_repair" type="object" string="Save" class="oe_highlight" icon="fa-save"/>
                            <!-- Dropdown Print -->
                            <button name="stampa_tech_dropdown_order" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" type="button" aria-haspopup="true" aria-expanded="false">Print</button>
                            <div class="dropdown-menu" role="menu">
                                <button name="action_print_repair_report" type="object" class="dropdown-item" string="Report" icon="fa-print"/>
                                <button name="action_print_repair_two_copies_report" type="object" class="dropdown-item" string="Report2" icon="fa-print"/>
                            </div>
                            <!-- Dropdown Actions -->
                            <button name="azioni_tech_dropdown_order" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" type="button" aria-haspopup="true" aria-expanded="false">Actions</button>
                            <div class="dropdown-menu" role="menu">
                                <button name="action_force_send_renewal_email" type="object" class="dropdown-item" string="Send Renewal Email" icon="fa-envelope-open-o"/>
                            </div>
                        </div>       
                    </div>
                    
                    <!-- Quick Inventory Check-in Section -->
                    <group string="Quick Device Check-in" name="quick_checkin">
                        <button name="%(action_tech_repair_inventory)d" type="action" string="Check-in Device to Inventory" class="btn-primary" icon="fa-plus-circle"/>
                    </group>
                    
                    <group>
                        <group>
                            <field name="name" readonly="1"/>  <!-- Repair Number (Automatically Generated) -->
                            <field name="customer_id" placeholder="Customer" context="{'from_tech_repair_order': True}"/> <!-- Customer options="{'no_create': True}"-->
                            <field name="worktype"/>
                            <field name="problem_description" placeholder="e.g. Touch not working"/>  <!-- Problem Description -->
                            <field name="sim_pin" placeholder="0000"/>
                            <field name="device_password" placeholder="Password"/>
                        </group>
                        <group>
                            <field name="state_id" required="1"/>  <!-- Repair status -->
                            <field name="customer_state_id"/>  <!-- Customer Visible Status -->
                            <field name="open_date" readonly="1"/>
                            <field name="stimated_date" readonly="1"/>
                            <field name="close_date" readonly="1"/>
                            <field name="last_modified_date" readonly="1"/>
                            <field name="opened_by"/>  <!-- Technician who opens the repair -->
                            <field name="assigned_to"/>  <!-- Assigned technician -->
                            <field name="tech_repair_cost"/>  <!-- Repair Cost -->
                            <field name="advance_payment"/>  <!-- Down Payment -->
                            <field name="discount_amount"/>  <!-- Discount -->
                            <field name="expected_total" readonly="1"/>  <!-- Expected Total -->
                            <field name="loaner_device_id" domain="[('status', '=', 'available')]"/> <!-- Loaner -->
                        </group>
                    </group>
                    
                    <!-- Multiple Devices Section -->
                    <group string="Devices" name="devices_section">
                        <field name="device_ids" nolabel="1" context="{'default_repair_order_id': id}">
                            <list editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="category_id" required="1"/>
                                <field name="brand_id" required="1"/>
                                <field name="model_id" required="1" domain="[('brand_id', '=', brand_id)]"/>
                                <field name="model_variant"/>
                                <field name="inventory_id" required="1" 
                                       domain="[('category_id', '=', category_id), ('brand_id', '=', brand_id), ('model_id', '=', model_id), ('model_variant', '=', model_variant), ('status', '=', 'available')]"
                                       options="{'no_create': True, 'no_open': True}"/>
                                <field name="serial_number"/>
                                <field name="device_color"/>
                                <field name="aesthetic_condition"/>
                            </list>
                        </field>
                    </group>
                    
                    <!-- Legacy Single Device Fields (For Backward Compatibility) -->
                    <group string="Legacy Device Info (Deprecated - Use Devices section above)" name="legacy_device" attrs="{'invisible': [('device_ids', '!=', [])]}">
                        <group>
                            <field name="category_id" placeholder="Category"/>  <!-- Category -->
                            <field name="brand_id" placeholder="Brand"/>  <!-- Brand -->
                            <field name="model_id" placeholder="Model" domain="[('brand_id', '=', brand_id)]"/>  <!-- Model -->
                            <field name="model_variant" placeholder="e.g. Pro Max"/> <!-- variant -->
                        </group>
                        <group>
                            <field name="device_color" placeholder="Color" widget="many2one_tags"/> <!-- Color -->
                            <field name="aesthetic_condition"/> <!-- Aesthetic Conditions -->
                            <field name="aesthetic_state" placeholder="e.g. Scratches on body"/> 
                            <field name="serial_number" placeholder="0123456789"/>  <!-- Serial Number -->
                        </group>
                    </group>

                    <group>
                        <group>
                            <field name="signature" widget="signature" readonly="signature_locked"/> <!-- Signature widget -->
                            <button name="action_unlock_signature" type="object" string="Edit Signature" class="btn-secondary btn-sm" invisible="signature_locked == False"/>
                        </group>
                        <group name="qr_code">
                            <field name="qr_code" widget="image" class="oe_avatar"/> <!-- Customer QR Code section -->
                            <field name="qr_code_int" widget="image" class="oe_avatar"/> <!-- Internal QR Code section -->
                        </group>
                    </group>

                    <group>
                        <group>
                            
                        </group>
                        <group>
                            <field name="term_id"/> <!-- selected terms -->
                        </group>
                    </group>

                    <!-- Tabs Management-->
                    <notebook>
						<page string="Operations" name="desc_op" class="fixed-height-page">
                            <group>
                                <field name="workoperations" widget="html"/>  <!-- Operations Performed -->
                            </group>
						</page>
                        <page string="Credentials" name="cred_extra" class="fixed-height-page">
                            <group>
                                <field name="credential_ids" string=" ">
                                    <list editable="bottom">
                                        <field name="open_date"/>
                                        <field name="username"/>
                                        <field name="password"/>
                                        <field name="service_type"/>
                                        <field name="service_other" invisible="service_type != &quot;other&quot;" required="service_type == &quot;other&quot;"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                        <page string="Accessories" name="accessory" class="fixed-height-page">
                            <group>
                                <field name="accessory_ids" string=" ">
                                    <list editable="bottom">
                                        <field name="aesthetic_condition"/>
                                        <field name="name"/>
                                        <field name="custom_name" invisible="name != &quot;altro&quot;"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                        <page string="Software to Install" name="software" class="fixed-height-page">
                            <group>
                                <field name="software_line_ids" string=" ">
                                    <list editable="bottom">
                                        <field name="software_id" string="Software"/>
                                        <field name="software_price" string="Price" readonly="1"/>
                                        <field name="software_renewal_required" string="Renewal Required" readonly="1"/>
                                        <field name="software_duration" string="Duration" readonly="1" attrs="{'invisible': [('software_id.renewal_required', '=', False)]}"/>
                                        <field name="add_to_sum" string="Add to Total"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                        <page string="Components / Parts" name="compon_used" class="fixed-height-page">
                            <group>
                                <field name="components_ids" string=" ">
                                    <list editable="bottom">
                                        <field name="product_id"/>
                                        <field name="supplier_id" domain="supplier_domain"/>
                                        <field name="purchase_date"/>
                                        <field name="receipt_date"/>
                                        <field name="serial_number"/>
                                        <field name="pur_price"/>
                                        <field name="lst_price"/>
                                        <field name="add_to_sum"/>
                                    </list>
                                </field>
                            </group>
						</page>
                        <page string="External Lab" name="ext_lab" class="fixed-height-page">
                            <field name="external_lab_ids" string=" ">
                                <list editable="bottom">
                                    <field name="lab_id"/>
                                    <field name="operation_description"/>
                                    <field name="external_cost"/>
                                    <field name="customer_cost"/>
                                    <field name="send_date"/>
                                    <field name="out_date"/>
                                    <field name="add_to_sum" string="Add to Total"/>
                                </list>
                            </field>
                        </page>
                        <page string="Customer Chat" name="chat_customer" class="fixed-height-page">
                            <field name="chat_message_ids" string=" ">
                                <list editable="bottom">
                                        <field name="create_date"/>
                                        <field name="sender"/>
                                        <field name="message"/>
                                </list>
                            </field>
                        </page>
					</notebook>
                    <footer>
                        
                    </footer>
                </sheet>
                
                <chatter>
                    <field name="message_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_follower_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <!-- List view of repairs -->
    <record id="view_tech_repair_order_list" model="ir.ui.view">
        <field name="name">tech.repair.order.list</field>
        <field name="model">tech.repair.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="category_id"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="state_id"/>
                <field name="expected_total"/>
                <field name="open_date" readonly="1"/>
                <field name="close_date" readonly="1"/>
            </list>
        </field>
    </record>

    <record id="view_repair_order_search" model="ir.ui.view">
        <field name="name">tech.repair.order.search</field>
        <field name="model">tech.repair.order</field>
        <field name="arch" type="xml">
            <search>
                
                <field name="name" string="Repair Number"/>
                <field name="customer_id" string="Customer"/>
                <field name="category_id" string="Category"/>
                <field name="brand_id" string="Brand"/>
                <field name="model_id" string="Model"/>
                <field name="state_id" string="Job Status"/>

                
                <filter name="filter_open" string="Open" domain="[('state_id.is_closed', '=', False)]"/>
                <filter name="filter_closed" string="Closed" domain="[('state_id.is_closed', '=', True)]"/>
                <separator/>
                <filter name="filter_assigned" string="Assigned to me" domain="[('assigned_to', '=', uid)]"/>
                <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_tech_repair_order" model="ir.actions.act_window">
        <field name="name">Repairs</field>
        <field name="res_model">tech.repair.order</field>
        <field name="type">ir.actions.act_window</field>
        <!-- <field name="view_id" ref="view_tech_repair_order_kanban"/> -->
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_repair_order_search"/> <!-- set search actions for the list view-->
        <field name="context">{'search_default_filter_open': 1}</field> <!-- default filter for open jobs only (it's an array, I can put more than one)-->
    </record>

    



    

</odoo>
