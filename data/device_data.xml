<odoo>
  <!-- Device categories -->
  <record id="category_lens" model="tech.repair.device.category">
    <field name="name">Lens</field>
  </record>
  <record id="category_camera" model="tech.repair.device.category">
    <field name="name">Camera</field>
  </record>

  <!-- ********* Brands for Camera and Lens *********** -->

  <!-- Canon -->
  <record id="brand_canon" model="tech.repair.device.brand">
    <field name="name">Canon</field>
  </record>
  
  <!-- ********* Models (Camera and Lens) *********** -->

  <!-- Canon Camera Models -->
  <record id="model_canon_eos_5d" model="tech.repair.device.model">
    <field name="name">EOS 5D</field>
    <field name="brand_id" ref="brand_canon"/>
    <field name="category_id" ref="category_camera"/>
  </record>

  <!-- ********* Variants *********** -->
  <record id="variant_canon_eos_5d_mkiii" model="tech.repair.device.variant">
    <field name="name">Mark III</field>
    <field name="model_id" ref="model_canon_eos_5d"/>
  </record>
  
  <record id="variant_canon_eos_5d_mkiv" model="tech.repair.device.variant">
    <field name="name">Mark IV</field>
    <field name="model_id" ref="model_canon_eos_5d"/>
  </record>

</odoo>