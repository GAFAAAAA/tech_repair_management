<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <data noupdate="1">
            <record id="email_template_repair_renewal" model="mail.template">
                <field name="model_id" ref="model_tech_repair_order"/>
                <field name="name">TECH Software License Renewal</field>
                <field name="email_from">{{ object.company_id.email }}</field>
                <field name="email_to">{{ object.customer_id.email }}</field>
                <field name="subject">{{ object.company_id.name }} - Software License Renewal</field>
                <field name="auto_delete" eval="True"/>
                <field name="body_html" type="html">
                    <p>Good morning <t t-out="object.customer_id.name or ''"/>,</p>
                    <p>We remind you that the software installed on your PC will expire on <strong> <t t-out="object.renewal_date.strftime('%d/%m/%Y')"/> </strong>.</p>
                    <p>To avoid any issues, we recommend contacting us for renewal.</p>
                    <p>Expiring software:</p>
                    <t t-out="object.renewal_softwares"/>
                    <p>Thank you!</p>
                    <p>Staff - TECH 3.0Â®</p>
                </field>
            </record>
        </data>
    </odoo>
